<body>
  <div class="wrapper">
    <div class="sidebar">
      <h2>Studmate</h2>
      <ul>
        <li><a href="/home?user=<%= JSON.stringify(user) %>"><i class="fas fa-home"></i>Home</a></li>
        <li><a href="/profile?user=<%= JSON.stringify(user) %>"><i class="fas fa-user"></i>Profile</a></li>
        <li><a href="/library?user=<%= JSON.stringify(user) %>"><i class="fas fa-book-reader"></i>library</a></li>
        <li><a href="/study_planner?user=<%= JSON.stringify(user) %>"><i class="fas fa-project-diagram"></i>Study Planner</a></li>
        <li><a href="/budget_tracker?user=<%= JSON.stringify(user) %>"><i class="fas fa-balance-scale"></i>budget tracker</a></li>
        <li><a href="/flash_cards?user=<%= JSON.stringify(user) %>"><i class="fas fa-star"></i>Flash Cards</a></li>
      </ul>
      <div class="social_media">
        <a href="#"><i class="fab fa-facebook-f"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
      </div>
    </div>

    <!-- Assuming `enteredName` is passed as a variable to the template -->
    <div class="main_content">
      <div class="header">
        <h2>Library</h2>
      </div>
  
      <div class="folders-container">
        <% if (folders.length > 0) { %>
          <ul>
            <% folders.forEach(folder => { %>
              <li>
                <a href="/folder?user=<%= encodeURIComponent(JSON.stringify(user)) %>&folder=<%= encodeURIComponent(JSON.stringify(folder)) %>">
                  <i class="fas fa-folder"></i> <%= folder.folder_name %>
                </a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>You don't have any folders yet.</p>
        <% } %>
      </div>
       <form id="createFolderForm" action="/create_folder?user=<%= JSON.stringify(user) %>" method="POST">
       
        <button id="addFolderButton" class="add-folder-btn">+</button>
      </form>
    </div>
  </div>

  </body>
    <script>
      const createFolderForm = document.getElementById('createFolderForm');
  
      const addFolderButton = document.getElementById('addFolderButton');
      addFolderButton.addEventListener('click', () => {
    const folderName = prompt('Enter the name of the folder:');
    if (folderName) {
      // Create a hidden input field to hold the folder name
      const hiddenInput = document.createElement('input');
      hiddenInput.type = 'hidden';
      hiddenInput.name = 'folderName';
      hiddenInput.value = folderName;
      
      // Append the hidden input to the form
      createFolderForm.appendChild(hiddenInput);

      // Submit the form
      createFolderForm.submit();
    }
  });

    // Move the "+" button dynamically
    function moveAddButton() {
      const formHeight = createFolderForm.clientHeight;
      addFolderButton.style.marginTop = `${formHeight}px`;
    }

    moveAddButton();

    window.addEventListener('resize', moveAddButton);
    createFolderForm.addEventListener('submit', moveAddButton);
    </script>
  
